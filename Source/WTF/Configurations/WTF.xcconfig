EXECUTABLE_PREFIX = lib;
INSTALL_PATH = $(WTF_INSTALL_PATH_PREFIX)$(WK_LIBRARY_INSTALL_PATH);
PRODUCT_NAME = WTF;

GCC_SYMBOLS_PRIVATE_EXTERN = YES;
STRIP_INSTALLED_PRODUCT = NO;

WK_EXCLUDED_SOURCE_FILE_NAMES_MODULEMAP = $(WK_EXCLUDED_SOURCE_FILE_NAMES_MODULEMAP_$(GENERATE_WTF_MODULEMAP));
WK_EXCLUDED_SOURCE_FILE_NAMES_MODULEMAP_ = module.modulemap;
WK_EXCLUDED_SOURCE_FILE_NAMES_MODULEMAP_NO = module.modulemap;
WK_EXCLUDED_SOURCE_FILE_NAMES_MODULEMAP_YES = ;

// ICU headers don't have target membership in WTF, but they are visible to the "Generate TAPI filelist" build phase. Since they are not installed to /usr/local/include/wtf and not API, tell the script to ignore them.
EXCLUDED_SOURCE_FILE_NAMES = $(inherited) icu/unicode/* $(WK_EXCLUDED_SOURCE_FILE_NAMES_MODULEMAP) $(EXCLUDED_SOURCE_FILE_NAMES_$(USE_INTERNAL_SDK));
EXCLUDED_SOURCE_FILE_NAMES_[sdk=embedded*] = MachExceptions.defs;

INSTALLHDRS_SCRIPT_PHASE = YES;
APPLY_RULES_IN_COPY_HEADERS = YES;

PRIVATE_HEADERS_FOLDER_PATH = $(WTF_INSTALL_PATH_PREFIX)$(WK_LIBRARY_HEADERS_FOLDER_PATH)/wtf;

ICU_HEADERS_FOLDER_PATH = $(ICU_HEADERS_FOLDER_PATH_$(DEPLOYMENT_LOCATION));
ICU_HEADERS_FOLDER_PATH_NO = $(BUILT_PRODUCTS_DIR)$(WK_LIBRARY_HEADERS_FOLDER_PATH)/unicode;
ICU_HEADERS_FOLDER_PATH_YES = $(WTF_INSTALL_PATH_PREFIX)$(WK_LIBRARY_HEADERS_FOLDER_PATH)/unicode;

SYSTEM_FRAMEWORK_SEARCH_PATHS = $(inherited) $(WK_PRIVATE_SDK_DIR)$(SYSTEM_LIBRARY_DIR)/PrivateFrameworks

// Used to generate headers filelist for TAPI in JavaScriptCore. CPP_HEADERMAP_PRODUCT_HEADERS_VFS_FILE
// is not exported to script phases, so it must be bound to a different name.
WK_HEADERS_VFS_FILE = $(CPP_HEADERMAP_PRODUCT_HEADERS_VFS_FILE);

GENERATE_WTF_MODULEMAP = YES;

// Work around SDKs which do not have the bug fix for rdar://157124281.
GENERATE_WTF_MODULEMAP[sdk=macosx14*] = ;
GENERATE_WTF_MODULEMAP[sdk=macosx15*] = ;
GENERATE_WTF_MODULEMAP[sdk=macosx26.0*] = $(WK_NOT_$(DEPLOYMENT_LOCATION));
GENERATE_WTF_MODULEMAP[sdk=macosx26.1*] = $(WK_NOT_$(DEPLOYMENT_LOCATION));
GENERATE_WTF_MODULEMAP[sdk=macosx26.2*] = $(WK_NOT_$(DEPLOYMENT_LOCATION));
GENERATE_WTF_MODULEMAP[sdk=macosx26.3*] = $(WK_NOT_$(DEPLOYMENT_LOCATION));

GENERATE_WTF_MODULEMAP[sdk=iphone*26.0*] = ;
GENERATE_WTF_MODULEMAP[sdk=iphone*26.1*] = ;
GENERATE_WTF_MODULEMAP[sdk=iphone*26.2*] = ;
GENERATE_WTF_MODULEMAP[sdk=iphone*26.3*] = ;

GENERATE_WTF_MODULEMAP[sdk=appletv*26.0*] = ;
GENERATE_WTF_MODULEMAP[sdk=appletv*26.1*] = ;
GENERATE_WTF_MODULEMAP[sdk=appletv*26.2*] = ;
GENERATE_WTF_MODULEMAP[sdk=appletv*26.3*] = ;

GENERATE_WTF_MODULEMAP[sdk=watch*26.0*] = ;
GENERATE_WTF_MODULEMAP[sdk=watch*26.1*] = ;
GENERATE_WTF_MODULEMAP[sdk=watch*26.2*] = ;
GENERATE_WTF_MODULEMAP[sdk=watch*26.3*] = ;

GENERATE_WTF_MODULEMAP[sdk=xr*26.0*] = ;
GENERATE_WTF_MODULEMAP[sdk=xr*26.1*] = ;
GENERATE_WTF_MODULEMAP[sdk=xr*26.2*] = ;
GENERATE_WTF_MODULEMAP[sdk=xr*26.3*] = ;

// The WTF module is ill-formed on bridgeOS.
GENERATE_WTF_MODULEMAP[sdk=bridgeos*] = ;

ENABLE_WK_LIBRARY_MODULE_VERIFIER = $(GENERATE_WTF_MODULEMAP);

// The WTF module is ill-formed in these configurations, but are needed for backward compatibility.
ENABLE_WK_LIBRARY_MODULE_VERIFIER[sdk=macosx26.0*] = ;
ENABLE_WK_LIBRARY_MODULE_VERIFIER[sdk=macosx26.1*] = ;
ENABLE_WK_LIBRARY_MODULE_VERIFIER[sdk=macosx26.2*] = ;
ENABLE_WK_LIBRARY_MODULE_VERIFIER[sdk=macosx26.3*] = ;

MODULE_VERIFIER_SUPPORTED_LANGUAGES = c++ objective-c++;
MODULE_VERIFIER_SUPPORTED_LANGUAGE_STANDARDS = c++2b;

OTHER_MODULE_VERIFIER_FLAGS = -- -isystem $(DSTROOT)$(WTF_INSTALL_PATH_PREFIX)$(WK_LIBRARY_HEADERS_FOLDER_PATH) -I$(BUILT_PRODUCTS_DIR)$(WK_LIBRARY_HEADERS_FOLDER_PATH) -I$(WK_ADDITIONAL_SDKS)$(WK_LIBRARY_HEADERS_FOLDER_PATH) -isystem "$(WK_PRIVATE_SDK_DIR)$(WK_ALTERNATE_WEBKIT_SDK_PATH)$(WK_LIBRARY_HEADERS_FOLDER_PATH)" -iframework $(WK_PRIVATE_SDK_DIR)$(SYSTEM_LIBRARY_DIR)/PrivateFrameworks -Wsystem-headers-in-module=wtf;

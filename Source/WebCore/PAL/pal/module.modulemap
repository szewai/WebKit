module pal [system] {
    explicit module ExportMacros {
        header "ExportMacros.h"
        export *
    }

    explicit module spi {
        umbrella "spi"

        explicit module * {
            export *
        }

        export *
    }

    explicit module Core {
        umbrella "."

        requires cplusplus

        explicit module * {
            export *
        }

        export *
    }

    export *
}
